

<% if user_signed_in? %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <a class="navbar-brand" href="/">
           RENTBEAT
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <div class="text-bar">
          <li class="nav-item active">
            <a class="nav-link" href="/"> Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-bookings">My Bookings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-studios">My Studios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/studios/new">Add a studio</a>
          </li>
        </div>
        <li class="nav-item dropdown">

          <% if current_user.avatar.attached? %>
              <%= cl_image_tag current_user.avatar.key, crop: :fill, class: "avatar dropdown-toggle", id:"navbarDropdown", data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://images.unsplash.com/photo-1574882225022-9e0e447e9662?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" />
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <p class="tooltip-navbar"><%= current_user.name %></p>
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
            <%= link_to "Edit my profile", edit_user_registration_path, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>

<% else %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <a class="navbar-brand" href="/">
        RENTBEAT
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/"> Home</a>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log In", new_user_session_path, class:"nav-link" %>
        </li>
      </ul>
    </div>
  </div>


<% end %>
