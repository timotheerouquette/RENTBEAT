<h2> <%= @studio.title %> </h2>

<% if @studio.photos.attached? %>
  <%= cl_image_tag @studio.photos.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <img src="https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2550&q=80" />
<% end %>
<p> <%= @studio.address %> </p>
<p> <%= @studio.description %> </p>
<p> <%= @studio.capacity %> </p>
<p> <%= @studio.price %> </p>


  <% if policy(@studio).edit? %>
    <%= link_to "Update", edit_studio_path(@studio) %>
  <% end %>

<%= link_to("Back flats list", studios_path) %>
<%= link_to("Book this studio", new_studio_booking_path(@studio)) %>
