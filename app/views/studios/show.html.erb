
<div class="container">
  <%= link_to(" < Back studio list", studios_path, class: "back-btn") %>

  <div class="show-container">

    <div class="studio-image">
      <% if @studio.photos.attached? %>
      <%= cl_image_tag @studio.photos.key, height: 70, width: 100, crop: :fill %>
      <% else %>
        <img id="default-img" src="https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2550&q=80" />
      <% end %>
    </div>

    <div class="title-info">
      <h2> <%= @studio.title %> </h2>
      <p> <%= @studio.address %> </p>
      <p> <%= @studio.capacity %> </p>
      <p> <%= @studio.price %> </p>


        <% if policy(@studio).edit? %>
          <%= link_to "Update", edit_studio_path(@studio) %>
        <% end %>

      <% if policy(Booking).create? %>
      <%= link_to("Book this studio", new_studio_booking_path(@studio),class: "back-btn") %>
      <% end %>
    </div>
  </div>

  <div class="description">
    <h3>Description</h3>
    <p> <%= @studio.description %> </p>
  </div>

</div>
